{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"lib": ["es2020"],
		"outDir": "out",
		"rootDir": "../",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"noImplicitAny": false,
		"types": ["mocha", "node"],
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["../shared/*"],
			"@client/*": ["./src/*"]
		}
	},
	"include": ["src/**/*", "../shared/**/*"],
	"exclude": ["node_modules", ".vscode-test", "webpack.config.js"]
}
