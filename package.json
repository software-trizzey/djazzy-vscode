				"whenInRome.languages.python.expressiveNames.functions.functionLengthLimit": {
					"type": "number",
					"default": 60,
					"description": "Set the maximum length for functions.",
					"order": 35
				},
				"whenInRome.languages.python.expressiveNames.functions.maxCyclomaticComplexity": {
					"type": "number",
