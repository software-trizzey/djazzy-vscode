{
	"name": "when-in-rome",
	"displayName": "When in Rome",
	"description": "AI-Driven Code Stylist that enforces team conventions. After all, when in rome you should do as the Romans do.",
	"author": "Tristan Deane",
	"version": "0.0.1",
	"publisher": "alchemized",
	"license": "SEE LICENSE IN LICENSE.md",
	"repository": "https://github.com/software-trizzey/when-in-rome-lsp",
	"pricing": "Trial",
	"categories": [
		"Programming Languages",
		"Linters",
		"Other"
	],
	"keywords": [
		"code-stylist copilot rome conventions code-quality"
	],
	"engines": {
		"vscode": "^1.75.0",
		"node": ">=18"
	},
	"activationEvents": [
		"onLanguage:python",
		"onLanguage:javascript",
		"onLanguage:typescript"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "When In Rome",
			"properties": {
				"whenInRome.languages": {
					"type": "object",
					"properties": {
						"javascript": {
							"$ref": "#/definitions/LanguageConventions"
						},
						"typescript": {
							"$ref": "#/definitions/LanguageConventions"
						},
						"python": {
							"$ref": "#/definitions/LanguageConventions"
						}
					}
				},
				"whenInRome.onlyCheckNewCode": {
					"type": "boolean",
					"default": false,
					"description": "Check only new or modified code."
				},
				"whenInRome.isDevMode": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable development mode."
				},
				"whenInRome.notificationInterval": {
					"type": "number",
					"default": 20,
					"description": "Interval in minutes between notifications."
				}
			}
		}
	},
	"definitions": {
		"LanguageConventions": {
			"type": "object",
			"properties": {
				"isEnabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable/disable language-specific features."
				},
				"variable": {
					"$ref": "#/definitions/RuleSettings"
				},
				"function": {
					"$ref": "#/definitions/RuleSettings"
				},
				"class": {
					"$ref": "#/definitions/RuleSettings"
				},
				"boolean": {
					"$ref": "#/definitions/BooleanRuleSettings"
				}
			}
		},
		"RuleSettings": {
			"type": "object",
			"properties": {
				"expressive": {
					"type": "boolean",
					"default": true,
					"description": "Enforce expressiveness in naming."
				},
				"avoidAbbreviation": {
					"type": "boolean",
					"default": true,
					"description": "Avoid abbreviations to enhance clarity."
				}
			}
		},
		"BooleanRuleSettings": {
			"type": "object",
			"properties": {
				"positiveNaming": {
					"type": "boolean",
					"default": true,
					"description": "Enforce positive naming conventions."
				},
				"expressive": {
					"type": "boolean",
					"default": true,
					"description": "Enforce expressiveness in boolean naming."
				},
				"avoidAbbreviation": {
					"type": "boolean",
					"default": true,
					"description": "Avoid abbreviations in boolean variables."
				},
				"prefix": {
					"type": "array",
					"default": [
						"is",
						"has",
						"should",
						"can",
						"did"
					],
					"items": {
						"type": "string"
					},
					"description": "Prefixes to use for boolean variables."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "NODE_ENV=production npm run compile",
		"clean": "rimraf ./client/out ./server/out",
		"compile": "tsc -b",
		"package": "vsce package",
		"publish": "vsce publish",
		"dev-publish": "npm run package && code --install-extension when-in-rome-0.0.1.vsix",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"typescript": "^5.3.3"
	}
}
