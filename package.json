{
	"name": "when-in-rome",
	"displayName": "When In Rome",
	"description": "Enforce team coding standards seamlessly, reduce review cycles, and elevate code quality effortlessly. After all, when in rome you should code as the Romans do.",
	"author": "Tristan Deane",
	"version": "0.0.30",
	"publisher": "alchemized",
	"homepage": "https://www.rome.dev",
	"preview": true,
	"icon": "assets/images/logo-v1.png",
	"galleryBanner": {
		"color": "#20232D",
		"theme": "dark"
	},
	"license": "SEE LICENSE IN README.md",
	"pricing": "Trial",
	"categories": [
		"Programming Languages",
		"Linters",
		"Other",
		"Data Science",
		"Machine Learning",
		"Education"
	],
	"keywords": [
		"AI",
		"code quality",
		"coding conventions",
		"quick fix",
		"static analysis"
	],
	"engines": {
		"vscode": "^1.75.0",
		"node": ">=18"
	},
	"main": "./client/out/extension",
	"contributes": {
		"activationEvents": [
			"onCommand:whenInRome.signIn",
			"onCommand:whenInRome.addCustomRule",
			"onCommand:whenInRome.openWalkthrough"
		],
		"commands": [
			{
				"command": "whenInRome.signIn",
				"title": "When In Rome: Sign In"
			},
			{
				"command": "whenInRome.signOut",
				"title": "When In Rome: Sign Out"
			},
			{
				"command": "whenInRome.renameSymbol",
				"title": "Align Symbol With Conventions (When In Rome)"
			},
			{
				"command": "whenInRome.openSettings",
				"title": "When In Rome: Open Settings"
			}
		],
		"walkthroughs": [
			{
				"id": "whenInRome.gettingStarted",
				"title": "Getting Started with When In Rome",
				"description": "Learn how to use the key features of When In Rome.",
				"steps": [
				{
					"id": "whenInRome.installExtension",
					"title": "Install the Extension",
					"description": "Open VS Code, go to the Extensions view, and search for 'When In Rome'. Click 'Install' and wait for the installation to complete.",
					"media": {
					"image": "assets/images/walkthrough/install.png",
					"altText": "Install When In Rome"
					}
				},
				{
					"id": "whenInRome.signIn",
					"title": "Sign In with GitHub",
					"description": "Open command palette and type in â†’ ```When In Rome: Sign In```. Or press the button below: \n[Sign In](command:whenInRome.signIn)\nAccept the notification and you should be signed in via your GitHub account.",
					"media": {
						"image": "assets/images/walkthrough/signIn.png",
						"altText": "Sign In"
					},
					"completionEvents": ["onCommand:whenInRome.signIn"]
				},
				{
					"id": "whenInRome.namingConvention",
					"title": "Align Names with Team Conventions",
					"description": "Write a function with a poorly named variable. See how the extension highlights it and suggests a better name.",
					"media": {
						"image": "assets/gifs/rename-demo.gif",
						"altText": "Rename Symbol Demo"
					}
				},
				{
					"id": "whenInRome.untestedCode",
					"title": "Untested API Code Detection",
					"description": "Introduce a new piece of business logic without a test. Notice that When In Rome reminds you to test the changes.",
					"media": {
						"image": "assets/gifs/flag-untested-api-code.gif",
						"altText": "Untested Code Demo"
					}
				},
				{
					"id": "whenInRome.setupRules",
					"title": "Setup Naming and Testing Rules",
					"description": "Customize naming conventions and test requirements for your workspace.\n[Customize Rules](command:whenInRome.openSettings)\n\n[Import Conventions](command:whenInRome.addCustomRule)",
					"media": {
					  "image": "assets/images/walkthrough/settings.png",
					  "altText": "Setup Rules"
					}
				  }
				]
			}
		],
		"menus": {
			"editor/context": [
			  {
				"command": "whenInRome.renameSymbol",
				"when": "editorTextFocus && !editorReadonly",
				"group": "1_modification"
			  }
			]
		},
		"languages": [
			{
			  "id": "javascript",
			  "aliases": ["JavaScript", "js"],
			  "extensions": [".js"],
			  "configuration": "./language-configuration.json"
			},
			{
