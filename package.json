	"scripts": {
		"vscode:prepublish": "NODE_ENV=production tsc -b",
		"clean": "rimraf ./client/out ./server/out",
		"compile": "tsc -b",
		"package": "vsce package",
		"dev:package": "npm run package --pre-release",
		"publish": "vsce publish --allow-missing-repository",
		"dev-publish": "npm run dev:package && code --install-extension when-in-rome-0.0.12.vsix",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"typescript": "^5.3.3"
	}
}
