					"order": 20
				},
				"whenInRome.languages.typescript.expressiveNames.functions.isEnabled": {
					"type": "boolean",
					"default": true,
					"description": "Enforce expressive function names.",
					"order": 21
				},
				"whenInRome.languages.typescript.expressiveNames.functions.avoidAbbreviation": {
					"type": "boolean",
					"default": true,
					"description": "Avoid using abbreviations in function names.",
					"order": 22
				},
				"whenInRome.languages.typescript.expressiveNames.functions.avoidGenericNames": {
					"type": "boolean",
