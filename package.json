{
	"name": "djangoly",
	"displayName": "Djangoly",
	"description": "Write Cleaner, Faster, Scalable Django Code",
	"author": "Tristan Deane",
	"version": "0.2.0",
	"publisher": "alchemized",
	"preview": true,
	"homepage": "https://www.djangoly.com",
	"bugs": {
		"email": "support@djangoly.com"
	},
	"license": "Proprietary",
	"icon": "assets/images/logo-v2.png",
	"galleryBanner": {
		"color": "#20232D",
		"theme": "dark"
	},
	"categories": [
		"Programming Languages",
		"Linters",
		"Education",
		"Other"
	],
	"keywords": [
		"django",
		"code quality",
		"coding conventions",
		"quick fix",
		"static analysis"
	],
	"engines": {
		"vscode": "^1.75.0",
		"node": ">=18"
	},
	"main": "./client/out/extension",
	"server": "./server/out/server",
	"contributes": {
		"activationEvents": [
			"onLanguage:python",
			"onCommand:djangoly.addCustomRule",
			"onCommand:djangoly.openWalkthrough"
		],
		"commands": [
			{
				"command": "djangoly.signIn",
				"title": "Djangoly: Sign In"
			},
			{
				"command": "djangoly.signOut",
				"title": "Djangoly: Sign Out"
			},
			{
				"command": "djangoly.openSettings",
				"title": "Djangoly: Open Settings"
			},
			{
				"command": "djangoly.analyzeExceptionHandling",
				"title": "Code boost: Improve Exception Handling"
			}
		],
		"menus": {
			"editor/context": [
			  {
				"command": "djangoly.analyzeExceptionHandling",
				"when": "editorLangId == python",
				"group": "1_modification"
			  }
			]
		},
		"walkthroughs": [
			{
				"id": "djangoly.gettingStarted",
				"title": "Getting Started with Djangoly",
				"description": "Learn how to use the key features of Djangoly.",
				"steps": [
					{
						"id": "djangoly.installExtension",
						"title": "Install the Extension",
						"description": "Open VS Code, go to the Extensions view, and search for 'Djangoly'. Click 'Install' and wait for the installation to complete.",
						"media": {
							"image": "assets/images/walkthrough/install.png",
							"altText": "Install Djangoly"
						}
					},
					{
						"id": "djangoly.signIn",
						"title": "Sign In with GitHub",
						"description": "Open command palette and type in â†’ ```Djangoly: Sign In```. Or press the button below: \n[Sign In](command:djangoly.signIn)\nAccept the notification and you should be signed in via your GitHub account.",
						"media": {
							"image": "assets/images/walkthrough/signIn.png",
							"altText": "Sign In"
						},
						"completionEvents": [
							"onCommand:djangoly.signIn"
						]
					},
					{
						"id": "djangoly.untestedCode",
						"title": "Untested API Code Detection",
						"description": "Introduce a new piece of business logic without a test. Notice that Djangoly reminds you to test the changes.",
						"media": {
							"image": "assets/gifs/flag-untested-api-code.gif",
							"altText": "Untested Code Demo"
						}
					},
					{
						"id": "djangoly.setupRules",
						"title": "Setup Naming and Testing Rules",
						"description": "Customize naming conventions and test requirements for your workspace.\n[Customize Rules](command:djangoly.openSettings)\n\n[Import Conventions](command:djangoly.addCustomRule)",
						"media": {
							"image": "assets/images/walkthrough/settings.png",
							"altText": "Setup Rules"
						}
					}
				]
			}
		],
		"languages": [
			{
				"id": "python",
				"aliases": [
					"Python",
					"py"
				],
				"extensions": [
					".py"
				],
				"configuration": "./language-configuration.json"
			}
		],
        "configuration": {
            "title": "Djangoly",
            "properties": {
                "djangoly.general.booleanPrefixes": {
                    "type": "array",
                    "default": [
                        "is",
                        "has",
                        "should",
                        "can",
                        "did"
                    ],
                    "items": {
                        "type": "string"
                    },
                    "description": "Valid prefixes to use for boolean variables.",
                    "order": 1
                },
                "djangoly.comments.flagRedundant": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable to identify and flag comments that are unnecessary because the code is self-explanatory. To bypass this check for specific comments, include 'djangoly-ignore', 'TODO', or 'FIXME' in the comment text.",
                    "order": 2
                },
                "djangoly.lint.select": {
                    "type": "array",
                    "description": "Set rule codes to enable. Use `ALL` to enable all rules. View rules at https://github.com/software-trizzey/djangoly-docs/blob/main/docs/CONVENTION_RULES.md",
                    "default": [
						"SEC01",
						"SEC02",
						"SEC03",
						"SEC04",
						"SEC05",
						"SEC06",
						"SEC07",
						"SEC08",
						"SEC09",
						"SEC10",
						"SEC11",
						"SEC12",
						"CDQ01",
						"CDQ02",
						"CDQ03",
						"CDQ04",
						"CDQ05",
						"CDQ06",
						"STY01",
						"STY02"
					],
                    "items": {
                        "type": "string",
						"enum": [
							"ALL",
							"SEC01",
							"SEC02",
							"SEC03",
							"SEC04",
							"SEC05",
							"SEC06",
							"SEC07",
							"SEC08",
							"SEC09",
							"SEC10",
							"SEC11",
							"SEC12",
							"SEC13",
							"SEC14",
							"CDQ01",
							"CDQ02",
							"CDQ03",
							"CDQ04",
							"CDQ05",
							"CDQ06",
							"CDQ07",
							"STY01",
							"STY02",
							"STY03"
						]
                    },
                    "order": 3
                },
                "djangoly.lint.ignore": {
                    "type": "array",
                    "default": [],
                    "description": "Set rule codes to disable. View rules at https://github.com/software-trizzey/djangoly-docs/blob/main/docs/CONVENTION_RULES.md",
                    "items": {
                        "type": "string",
						"enum": [
							"ALL",
							"SEC01",
							"SEC02",
							"SEC03",
							"SEC04",
							"SEC05",
							"SEC06",
							"SEC07",
							"SEC08",
							"SEC09",
							"SEC10",
							"SEC11",
							"SEC12",
							"SEC13",
							"SEC14",
							"CDQ01",
							"CDQ02",
							"CDQ03",
							"CDQ04",
							"CDQ05",
							"CDQ06",
							"CDQ07",
							"STY01",
							"STY02",
							"STY03"
						]
                    },
                    "order": 4
                }
            }
        }
	},
	"scripts": {
		"vscode:prepublish": "NODE_ENV=production npm run compile",
		"clean": "rimraf ./client/out ./server/out",
		"compile": "npm run check-types && node esbuild.config.js",
		"check-types": "tsc --noEmit",
		"package": "vsce package --allow-missing-repository && node esbuild.config.js --production",
		"dev:package": "npm run package --pre-release",
		"publish": "vsce publish --allow-missing-repository",
		"dev-publish": "npm run dev:package && code --install-extension djangoly-0.2.0.vsix",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.config.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"compile-tests": "tsc -b",
		"pretest": "npm run compile-tests",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.14.6",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"esbuild": "^0.23.1",
		"eslint": "^8.57.0",
		"mocha": "^10.3.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.3.3"
	}
}
