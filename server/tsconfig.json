{
	"compilerOptions": {
		"target": "es2020",
		"lib": ["es2020", "dom"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"sourceMap": true,
		"strict": true,
		"outDir": "out",
		"rootDir": "../",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"types": ["jest", "node"],
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["../shared/*"]
		}
	},
	"include": ["src/**/*", "../shared/**/*"],
	"exclude": ["node_modules", ".vscode-test", "webpack.config.js"]
}
